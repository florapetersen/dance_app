<!DOCTYPE html>
<html>
  <head>
    <title>DanceApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-light" style="background-color: #FFFFFF;">
    <a class="navbar-brand" href="/">DanceApp</a>
    
    <% if user_signed_in? %>
    <%= form_tag(destroy_user_session_path, method: :delete, style: 'display: inline-block;') do %>
      <%= submit_tag "Sign Out" %>
    <% end %>
  <% else %>
    <form class="form-inline">
      <a class="btn btn-outline-primary" href="/users/sign_in" role="button">
      Sign in
      </a>
      <div style="padding-left: 10px;">
        <a class="btn btn-outline-success" href="/users/sign_up" role="button">
        Sign Up 
        </a>
      </div>
    </form>
  <% end %>
  </nav>
    <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: name %>
    <% end -%>
    <%= yield %>
  </body>
</html>
